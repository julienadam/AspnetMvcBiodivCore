@model IEnumerable<AspNetBiodiv.Core.Web.Models.EspeceViewModel>

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomScientifique)
            </th>
            <th>                
                Lien INPN
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomScientifique)
            </td>
            <td>
                    <inpn Code="@item.CodeInpn">Lien vers l'INPN</inpn>
            </td>
            <td>
                @Html.ActionLink("Details", "Detail", new { id=item.Id }) |
            </td>
        </tr>
}
    </tbody>
</table>
