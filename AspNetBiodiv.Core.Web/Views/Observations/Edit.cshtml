@using AspNetBiodiv.Core.Web.Services
@model AspNetBiodiv.Core.Web.Models.ObservationViewModel
@inject ICommunes Communes
@{
    ViewBag.Title = "Modification d'une observation de " + @Model.NomEspeceObservee;
}

<h4>Modification d'une observation de @Model.NomEspeceObservee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.ValidationSummary();
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.DateObservation)
                <label asp-for="DateObservation" class="control-label"></label>
                <input asp-for="DateObservation" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.Individus)
                <label asp-for="Individus" class="control-label"></label>
                <input asp-for="Individus" class="form-control"/>
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.NomCommune)
                <label asp-for="NomCommune" class="control-label"></label>
                <select name="NomCommune" class="form-control" asp-items="@Communes.GetCommuneItems()"></select>
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.Commentaires)
                <label asp-for="Commentaires" class="control-label"></label>
                <textarea asp-for="Commentaires" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregister" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-danger">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}